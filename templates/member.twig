{% extends 'base.twig' %}
{% block title %}
    会员管理
{% endblock %}

{% block content %}
    <div class="page-title">

        <div class="title-env">
            <h1 class="title">会员管理</h1>
        </div>

    </div>
    <div class="panel panel-default">
        <div class="panel-heading">

        </div>
        <div class="panel-body">

            <script type="text/javascript">
                jQuery(document).ready(function($)
                {
                    // Reveal Login form
                    setTimeout(function(){ $(".fade-in-effect").addClass('in'); }, 1);


                    // Validation and Ajax action
                    $("form#login").validate({
                        rules: {
                            uid: {
                                required: true
                            },

                            username: {
                                required: true
                            },

                            email: {
                                required: true
                            }
                        },

                        messages: {
                            uid: {
                                required: 'uid不能为空！'
                            },

                            username: {
                                required: '用户名不能为空！'
                            },

                            email: {
                                required: '邮箱不能为空！'
                            }
                        },

                        // Form Processing via AJAX
                        submitHandler: function(form)
                        {
                            show_loading_bar(70); // Fill progress bar to 70% (just a given value)

                            var opts = {
                                "closeButton": true,
                                "debug": false,
                                "positionClass": "toast-top-full-width",
                                "onclick": null,
                                "showDuration": "300",
                                "hideDuration": "1000",
                                "timeOut": "5000",
                                "extendedTimeOut": "1000",
                                "showEasing": "swing",
                                "hideEasing": "linear",
                                "showMethod": "fadeIn",
                                "hideMethod": "fadeOut"
                            };

                            $.ajax({
                                url: "/edituser",
                                method: 'POST',
                                dataType: 'json',
                                data: {
                                    uid: $(form).find('#uid').val(),
                                    passwd: $(form).find('#passwd').val(),
                                    state: $(form).find('#state').val(),
                                },
                                success: function(resp)
                                {
                                    show_loading_bar({
                                        delay: .5,
                                        pct: 100,
                                        finish: function(){

                                            // Redirect after successful login page (when progress bar reaches 100%)
                                            if(resp.code != 0)
                                            {
                                                toastr.error("保存不成功", "操作失败!", opts);
                                            }
                                            else
                                            {
                                                toastr.error("保存成功", "操作成功!", opts);
                                            }
                                        }
                                    });

                                }
                            });

                        }
                    });
                });
            </script>

            <div id="userinfo_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <table id="userinfo" class="table table-striped table-bordered dataTable" cellspacing="0" width="100%" role="grid" style="width: 100%;">
                    <thead>
                    <tr role="row">
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 209px;">用户名</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 311px;">邮箱</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 80px;">状态</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 180px;">登陆时间</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 180px;">创建时间</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 136px;">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr role="row" class="odd">
                                <td id="un-{{ user.uid }}">{{ user.username }}</td>
                                <td id="mail-{{ user.uid }}">{{ user.email }}</td>
                                <td id="state-{{ user.uid }}">
                                    {% if user.state != 0 %}
                                        <span class="label label-danger" id="s-{{ user.uid }}">拉黑</span>
                                    {% else %}
                                        <span class="label label-success" id="s-{{ user.uid }}">正常</span>
                                    {% endif %}
                                </td>
                                <td id="last-{{ user.id }}">{{ user.last_time }}</td>
                                <td id="create-{{ user.id }}">{{ user.create_time }}</td>
                                <td><a href="javascript:;" onclick="javascript:editUser(this)" class="btn btn-primary btn-single btn-sm" id="edit-{{ user.uid }}">编辑</a>
                                </td>
                        </tr>                                    
                        {% endfor %}
                    </tbody>
                </table>
                <div class="row"><div class="col-xs-6"></div><div class="col-xs-6"><div class="dataTables_paginate paging_simple_numbers" id="example-1_paginate"><ul class="pagination"><li class="paginate_button previous disabled" aria-controls="example-1" tabindex="0" id="example-1_previous"><a href="#">上一页</a></li><li class="paginate_button active" aria-controls="example-1" tabindex="0"><a href="#">1</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">2</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">3</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">4</a></li><li class="paginate_button next" aria-controls="example-1" tabindex="0" id="example-1_next"><a href="#">下一页</a></li></ul></div></div></div></div>

        </div>
    </div>

    <script>
        function editUser(obj)
        {
            var id = $(obj).attr("id").split("-")[1];
            var username = document.getElementById("un-" + id).innerHTML;
            var mail = document.getElementById("mail-" + id).innerHTML;
            var state = document.getElementById("s-" + id).innerHTML;
            $('#uid').val(id);
            $('#username').val(username);
            $('#email').val(mail);
            if (state == '拉黑')
            {
                $('#state').val(1);
            }
            else
            {
                $('#state').val(0);
            }
            $('#modal-6').modal('show', {backdrop: 'static'});
        }
    </script>

{% endblock %}

{% block modal %}
    <div class="modal fade" id="modal-6">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">编辑用户信息</h4>
                </div>
                <form method="post" role="form" id="edituser" class="fade-in-effect">
                    <div class="modal-body">
                    <input id="uid" type="text" hidden/>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="username" class="control-label">用户名</label>
                                <input type="text" class="form-control" id="username" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-2" class="control-label">邮箱</label>
                                <input type="text" class="form-control" id="email" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="password" class="control-label">密码(如无需修改，则留空)</label>

                                <input type="text" class="form-control" id="password" placeholder="密码">
                            </div>
                        </div>
                        <div class="col-md-6">

                            <div class="form-group no-margin">
                                <label for="state" class="control-label">状态</label>
                                <select class="form-control" id="state">
                                    <option value="0">正常</option>
                                    <option value="1">拉黑</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                    <button type="submit" class="btn btn-info">保存</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}