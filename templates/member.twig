{% extends 'base.twig' %}
{% block title %}
    会员管理
{% endblock %}

{% block content %}
    <div class="page-title">

        <div class="title-env">
            <h1 class="title">会员管理</h1>
        </div>

    </div>
    <div class="panel panel-default">
        <div class="panel-heading">

        </div>
        <div class="panel-body">

            <script type="text/javascript">
                jQuery(document).ready(function($)
                {
                    $("#example-1").dataTable({
                        aLengthMenu: [
                            [10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]
                        ]
                    });
                });
            </script>

            <div id="userinfo_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                <table id="userinfo" class="table table-striped table-bordered dataTable" cellspacing="0" width="100%" role="grid" style="width: 100%;">
                    <thead>
                    <tr role="row">
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 209px;">用户名</th>
                        <th  tabindex="0" rowspan="1" colspan="1" style="width: 311px;">邮箱</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 166px;">状态</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 77px;">登陆时间</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 140px;">创建时间</th>
                        <th tabindex="0" rowspan="1" colspan="1" style="width: 136px;">操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr role="row" class="odd">
                                <td>{{ user.name }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if user.state != 0 %}

                                    {% endif %}
                                </td>
                                <td>{{ user.last_time }}</td>
                                <td>{{ user.create_time }}</td>
                                <td><button class="btn btn-blue">编辑</button></td>
                        </tr>                                    
                        {% endfor %}
                    </tbody>
                </table>
                <div class="row"><div class="col-xs-6"></div><div class="col-xs-6"><div class="dataTables_paginate paging_simple_numbers" id="example-1_paginate"><ul class="pagination"><li class="paginate_button previous disabled" aria-controls="example-1" tabindex="0" id="example-1_previous"><a href="#">上一页</a></li><li class="paginate_button active" aria-controls="example-1" tabindex="0"><a href="#">1</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">2</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">3</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">4</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">5</a></li><li class="paginate_button " aria-controls="example-1" tabindex="0"><a href="#">6</a></li><li class="paginate_button next" aria-controls="example-1" tabindex="0" id="example-1_next"><a href="#">下一页</a></li></ul></div></div></div></div>

        </div>
    </div>
{% endblock %}